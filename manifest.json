{
  "manifest_version": 2,

  "name": "Show me the code!",
  "description": "Gives size data for github repositories",
  "version": "1.0",

  "permissions": [
     "tabs",
     "https://api.github.com/*"
  ],

  "content_scripts": [
    {
      "matches": ["https://github.com/*/*"],
      "css":     ["style.css"],
      "js":      ["jquery-2.1.1.js","smtc.js"]
    }
  ]
}
