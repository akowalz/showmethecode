{
  "manifest_version": 2,

  "name": "Show me the code!",
  "description": "Gives size data for github repositories",
  "version": "1.0",

  "permissions": [
     "https://api.github.com/*"
  ],

  "content_scripts": [
    {
      "matches": ["https://github.com/*/*"],
      "css":     ["smtc.css"],
      "js":      ["js/jquery-2.1.1.js",
                  "js/smtc.js",
                  "js/github.js"]
    }
  ]
}
